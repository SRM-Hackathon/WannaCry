<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/trainnoText"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="21sp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/trainnameText"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginLeft="150dp"
        android:textSize="21sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/srcstnText"
        android:layout_width="100dp"
        android:layout_height="41dp"
        android:textSize="21sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/deststnText"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/coachText"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="21sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp" />

    <Button
        android:id="@+id/plistbtn"
        android:layout_width="245dp"
        android:layout_height="64dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_rounded"
        android:onClick="fetchPList"
        android:text="View Passenger List"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:text="to"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textAlignment="center"
        />
</RelativeLayout>